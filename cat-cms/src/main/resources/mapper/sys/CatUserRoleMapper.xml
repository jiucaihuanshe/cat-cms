<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cat.sys.mapper.CatUserRoleMapper">
	<insert id="insertObject">
		insert into cat_roles_users(user_id,role_id) values
		<foreach collection="roleIds" separator="," item="roleId">(#{userId},#{roleId})</foreach>
	</insert>
	<select id="findRolesByUserId" resultType="integer">
		select role_id from cat_roles_users where user_id=#{id}
	</select>
	<delete id="deleteObject">
		delete from cat_roles_users where user_id=#{user_id}
	</delete>
</mapper>